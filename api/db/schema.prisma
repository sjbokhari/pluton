model UserExample {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}

model User {
  id                  Int       @id @default(autoincrement())
  email               String    @unique
  hashedPassword      String // <─┐
  salt                String // <─┼─ add these lines
  resetToken          String? // <─┤
  resetTokenExpiresAt DateTime? // <─┘
}

model Post {
  id        Int      @id @default(autoincrement())
  //id        String   @id @default(uuid())
  title     String
  body      String
  createdAt DateTime @default(now())
}

model Revenue {
  id          String   @id @default(uuid())
  title       String
  customer_id String
  seasson_id  String
  created_at  DateTime @default(now())
}

